<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="org.fos.controllers.TimeForABreakNotificationController" stylesheets="@../styles/general.css,@../styles/notification.css" styleClass="box-shadow" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <!-- SpineWare image and message -->
        <HBox alignment="CENTER" spacing="10">
            <ImageView fitHeight="50.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../media/SW_white.min.png"/>
            </ImageView>
            <Label fx:id="timeForABreakLabel"/>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="takeBreakButton" />
            <Button fx:id="dismissBreakButton" />
        </HBox>
    </bottom>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</BorderPane>
